{
  "name": "graphql-apq",
  "version": "1.0.0",
  "description": "Automatic persisted queries (APQ) for any GraphQL server.",
  "keywords": [
    "graphql",
    "persisted queries",
    "apq",
    "server",
    "queries"
  ],
  "homepage": "https://github.com/lucasconstantino/graphql-apq#readme",
  "bugs": {
    "url": "https://github.com/lucasconstantino/graphql-apq/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasconstantino/graphql-apq.git"
  },
  "license": "MIT",
  "author": "Lucas Constantino Silva <lucasconstantinosilva@gmail.com>",
  "main": "lib/index.js",
  "scripts": {
    "codecov": "yarn test && codecov",
    "compile": "babel src --extensions .ts -d lib",
    "lint": "eslint src --ext .ts",
    "prepublish": "npm run lint && npm run type-check && npm test && npm run compile",
    "type-check": "tsc",
    "test": "jest",
    "test:watch": "yarn test --watch --collectCoverage=no"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,ts,css,md}": "prettier --write",
    "*.{js,ts}": "eslint --cache --fix"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleNameMapper": {
      "^graphql-apq(.*)$": "<rootDir>/src$1"
    }
  },
  "dependencies": {
    "memory-cache": "^0.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/memory-cache": "^0.2.1",
    "@typescript-eslint/parser": "^2.30.0",
    "apollo-server-express": "^2.12.0",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-taller": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-standard": "^4.0.1",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "graphql-tools": "^5.0.0",
    "husky": ">=4",
    "jest": "^25.5.0",
    "lint-staged": ">=10",
    "prettier": "^2.0.5",
    "ramda": "^0.27.0",
    "supertest": "^4.0.2",
    "typescript": "^3.8.3"
  }
}
